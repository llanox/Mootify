<?xml version="1.0" encoding="utf-8"?>

<!--
    Este Este diseño tiene la función de proporcionarle al usuario
    las opciones para manipular el mensaje que actualmente está
    leyendo, las opciones son: compartir, guardar y borrar..
-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:background="@drawable/fondoactionbar" >

    <ImageButton
        android:background="@drawable/animation_discard_button"
        android:contentDescription="@string/description_delete"
        android:id="@+id/delete"
        android:layout_alignParentRight="true"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:onClick="delete" />

    <ImageView
        android:contentDescription="@string/separator"
        android:id="@+id/separator1"
        android:layout_height="@dimen/actionbar_separator_height"
        android:layout_toLeftOf="@id/delete"
        android:layout_width="@dimen/actionbar_separator_width"
        android:src="@drawable/separator" />

    <ImageButton
        android:background="@drawable/animation_save_button"
        android:contentDescription="@string/description_save"
        android:id="@+id/save"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/separator1"
        android:layout_width="wrap_content"
        android:onClick="save" />

    <ImageView
        android:contentDescription="@string/separator"
        android:id="@+id/separator2"
        android:layout_height="@dimen/actionbar_separator_height"
        android:layout_toLeftOf="@id/save"
        android:layout_width="@dimen/actionbar_separator_width"
        android:src="@drawable/separator" />

    <ImageButton
        android:background="@drawable/animation_share_button"
        android:contentDescription="@string/description_share"
        android:id="@+id/share"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_toLeftOf="@id/separator2"
        android:onClick="share" />

    <ImageView
        android:contentDescription="@string/separator"
        android:id="@+id/separator3"
        android:src="@drawable/separator"
        android:layout_height="@dimen/actionbar_separator_height"
        android:layout_toLeftOf="@id/share"
        android:layout_width="@dimen/actionbar_separator_width" />

    <ImageView
        android:background="@drawable/logo"
        android:contentDescription="@string/description_logo"
        android:id="@+id/Logo"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="5sp"
        android:layout_marginTop="6sp"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content" />
</RelativeLayout>